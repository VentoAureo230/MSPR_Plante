{% endfor %}#}


<div data-longitude="{{Achievement.longitude}}" data-latitude="{{Achievement.latitude}}" class="informations">
    <img <img class="PictureFound"  src="{{ ( asset( AchievementPicturePath ~ Achievement.file_name)) }}">
    {% for answer in Plant.answers %}

        {% if answer.Title != null %}
            <p>{{answer.Title}}</p>
        {% endif %}
        {% if answer.logo != null %}
            <img class="logo"  src="{{ ( asset( AnswerLogoPath ~ answer.logo)) }}">
        {% endif %}
        <p class="margin-15rem">{{answer.text}}</p>


    {% endfor %}
</div>

<div id="map"  style="height:400px;"></div>

<div class="flex-row">
    <a href="{{ path('game') }}" class="btn">Jouer</a>
    <a href="{{ path('app_achievement') }}" class="btn btn-info">Vos troph√©es</a>
    <a href="{{ path('home')}}" class="btn btn-success">Accueil</a>
</div>

{% endblock %}






