{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<link rel="stylesheet" href="{{asset ('assets/css/style_login.css')}}">

	<div class="login-page">
		<div class="form">
			<form method="post" class="login-form">
				<h1>
					Connexion</h1>
				<label for="inputEmail">Email</label>
				<input type="email" name="email" id="inputEmail" class="form-control" required autofocus>
				<label for="inputPassword">Mot de passe</label>
				<input type="password" name="password" id="inputPassword" class="form-control" required>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<button class="btn btn-lg btn-primary" type="submit" style="margin-top: 2%">
					Connexion
				</button>
				<p class="message">Not registered?
					<a href="{{ path('app_register') }}">Create an account</a>
				</p>
			</form>
		</div>
	</div>

{% endblock %}
